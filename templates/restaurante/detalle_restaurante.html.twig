{% extends 'base.html.twig' %}

{% block title %}Hello RestauranteController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1> restaurante {{restaurante.getId()}}! âœ…</h1>

        <strong>    {{restaurante.getNombre()}}    </strong> <br>
                <p>
                         direccion:  {{restaurante.getDireccion()}} <br> 
                         Telefono:  {{restaurante.getTelefono()}} <br>
                         Tipo de Cocina:  {{restaurante.getTipoCocina()}} <br>
                         Visitas:<br>
                        {% for visita in restaurante.getVisitas() %}
                            
