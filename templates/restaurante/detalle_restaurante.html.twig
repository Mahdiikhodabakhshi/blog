                            Comentario:{{visita.comentario()}}<br>
                            <button {% do restaurante.removeVisita({{visita}}) %}>eliminar</button>
                        {% endfor %}
                        
                        
                        
                         
                
                </p>

                <a href={{ path('listado_restaurante') }}> Volver</a>
              
            
      
</div>
{% endblock %}
