{% extends 'base.html.twig' %}

{% block title %}Hello RestauranteController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }

    .buttones a {
        margin-right: 30px;
    }
    button{
        padding:5px;
        border-radius:5px;
        border:none;
        color:white;
    }
</style>

<div class="example-wrapper">
    <h1>Listado de los restaurantes! ✅</h1>

        <a style="margin-left:17em;" href="{{ path("crear_restaurante_formulario") }}"><button style="background-color:#8ecae6;">crear nueva Restaurante</button> </a> <br><hr>

    <ul>
        {% for restaurante in restaurantes%}
        <li>
      
           {{restaurante.getId()}} <a href="{{ path('detalle_restaurante', {'id': restaurante.getId()}) }}">{{restaurante.getNombre()}}
         </a>   <br>
         <div class="buttones">

            <a  href={{path('eleminar_restaurante_get' , {id:restaurante.getID() } )}}><button style="background-color:#ff0054;  "  >eliminar restaurante</button></a>

            <a  href={{path('actualizar_restaurante_get' , {id:restaurante.getID() } )}}><button style="background-color:#02c39a;  " >Actualizar restaurante</button></a>
            <a  href={{path('crear_visitas_formulario' , {id:restaurante.getID() } )}}><button style="background-color:#ffbe0b;  " >Añadir visita</button></a>

         </div>
         
         <hr>
            
        </li>
        {% endfor %}
        
    </ul>
    
     <a  href={{path('listado_visitas')}}><button style="background-color:blue;  " >Todas visitas</button></a>
</div>


{% endblock %}
